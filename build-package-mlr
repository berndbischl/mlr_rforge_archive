#!/bin/bash

## Force 'C' locale for package build to avoid R encoding 'bugs'.
export LC_ALL=C

build="FALSE"
check="FALSE"
binary="FALSE"
install="FALSE"

while getopts "bczi" optname
  do
    case "$optname" in
      "b")
        build="TRUE"
        ;;
      "c")
        check="TRUE"
        ;;
      "z")
        binary="TRUE"
        ;;
      "i")
        install="TRUE"
        ;;
      "?")
        echo "Unknown option $OPTARG"
        ;;
      *)
      # Should not occur
        echo "Unknown error while processing options"
        ;;
    esac
  done

rargs="build<-$build; check<-$check; binary<-$binary; install<-$install; source('src/make/make.r')"
echo $rargs
Rscript -e "$rargs"


